# redirect to HTTPS
RewriteEngine On
RewriteCond %{HTTPS} !=on
RewriteCond %{ENV:HTTPS} !=on
RewriteRule .* https://%{SERVER_NAME}%{REQUEST_URI} [R=301,L]

# Sfs-Backend
RewriteRule ^api/sfs/(.*) http://localhost:3000/$1 [P]

# redirect www 
RewriteCond %{HTTP_HOST} =www.sfs.kimkern.de
RewriteRule (.*) https://sfs.kimkern.de/$1 [R=301,L]

# redirect routes to index
#RewriteRule ^index\.html$ - [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html 

# compress text files
AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/javascript text/javascript application/json

# security header
Header always set Referrer-Policy "origin-when-cross-origin"
